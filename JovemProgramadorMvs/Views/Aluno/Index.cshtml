@model List<AlunoModel>

@if (ViewData["Mensagem"] != null)
{

    <div class="alert-danger">
        @ViewData["Mensagem"]
    </div>

}

@if (TempData["Mensagem2"] != null)
{

    <div class="alert-success col-4">
        @TempData["Mensagem2"]
    </div>

}


@if (TempData["Mensagem3"] != null)
{

    <div class="alert-success col-4">
        @TempData["Mensagem3"]
    </div>

}

    <div class="text-left">

        <div>
            <h1>Dados dos Alunos</h1>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Idade</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">CEP</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (AlunoModel aluno in Model)
                    {

                        <tr>
                            <th scope="row"> @aluno.Id</th>
                            <td>@aluno.Nome</td>
                            <td>@aluno.Idade</td>
                            <td>@aluno.Email</td>
                            <td>@aluno.Telefone</td>
                            <td>@aluno.Cep</td>

                            <td>
                                <div class="d-grid" gap-2 d-md-block'>
                                    <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="BuscarEndereco" asp-route-id="@aluno.Id">Endereco</a>
                                </div>
                            </td>

                            <td>
                                <div class="d-grid" gap-2 d-md-block'>
                                    <a type="submit" class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                                </div>
                            </td>

                            <td>
                                <div class="d-grid" gap-2 d-md-block'>
                                    <a type="submit" class="btn btn-danger" role="button" asp-controller="Aluno" asp-action="Excluir" asp-route-id="@aluno.Id">excluir</a>
                                </div>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Adicionar">Adicionar Alunos</a>
            <a class="btn btn-primary" type="button" asp-controller="Filtros" asp-action="Index">Filtros Alunos</a>
            <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Index">Voltar</a>
        </div>
    </div>